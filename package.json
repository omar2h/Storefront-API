{
  "name": "build-a-storefront-backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "npx tsc",
    "lint": "eslint \"src/**/*.ts\"",
    "prettier": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "start": "node src/server.ts",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "migrate-up": "db-migrate up -m ./migrations   --config ./database.json",
    "migrate-down": "db-migrate reset -m ./migrations   --config ./database.json",
    "test": "set ENV=test&& db-migrate db:drop storedb_test && db-migrate db:create storedb_test && db-migrate up -e test -m ./migrations   --config ./database.json && tsc && jasmine && db-migrate reset -e test -m ./migrations   --config ./database.json",
    "tsc": "tsc"
  },
  "author": "Omar Hesham",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^3.10.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.21",
    "@types/pg": "^8.6.4",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.0.2",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.4.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.6.0",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.6.2"
  }
}
